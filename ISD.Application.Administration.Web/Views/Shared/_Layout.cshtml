<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
    <title>HAC Dashboard</title>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-2.1.1.min.js")
    @Scripts.Render("~/bundles/WebFormsJs")
    
    
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @RenderSection("scripts", required: false)
    <webopt:bundlereference path="~/Content/css" />
    <!-- font Awesome -->
    <link href="@Url.Content("Content/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="@Url.Content("Content/ionicons.min.css") " rel="stylesheet" type="text/css" />
    <!-- Morris chart -->
    <link href="@Url.Content("Content/morris/morris.css")" rel="stylesheet" type="text/css" />
    <!-- jvectormap -->
    <link href="@Url.Content("Content/jvectormap/jquery-jvectormap-1.2.2.css")" rel="stylesheet" type="text/css" />
    <!-- fullCalendar -->
    <link href="@Url.Content("Content/fullcalendar/fullcalendar.css")" rel="stylesheet" type="text/css" />
    <!-- Daterange picker -->
    <link href="@Url.Content("Content/daterangepicker/daterangepicker-bs3.css")" rel="stylesheet" type="text/css" />
    <!-- bootstrap wysihtml5 - text editor -->
    <link href="@Url.Content("Content/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
</head>
<body class="skin-blue">
        <!-- header logo: style can be found in header.less -->
        <header class="header">

            <a class="logo" href="@Url.Content("~")">
                <!-- Add the class icon to your logo image or logo icon to add the margining -->
                HAC Administration
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="glyphicon glyphicon-user"></i>
                                    <span>@Context.User.Identity.Name <i class="caret"></i></span>
                                </a>

                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header bg-light-blue">
                                        <img class="img-circle" alt="User Image" src="@Url.Content("~/Images/avatar5.png")" />
                                        <p>
                                            Administrator

                                            <small>Member since @DateTime.Now.ToShortDateString()</small>
                                        </p>
                                    </li>
                                    <!-- Menu Body
                                    <li class="user-body">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </li>-->
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a class="btn btn-default btn-flat" href="@Url.Content("~/Account/Manage")">Profile</a>
                                        </div>
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="pull-right">
                                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                            </div>
                                        }

                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="~/Account/Register">Register</a></li>
                            <li><a href="~/Account/Login">Log in</a></li>
                        </ul>
                    }

                </div>
            </nav>
        </header>
        <div class="wrapper row-offcanvas row-offcanvas-left">
            <!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img id="Image1" class="img-circle" alt="User Image" imageurl="~/Images/avatar5.png" />
                        </div>
                        <div class="pull-left info">
                            <p>Hello, @Context.User.Identity.Name</p>

                            <a href="#"><i class="fa fa-circle text-success"></i>Online</a>
                        </div>
                    </div>

                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                        <li class="active">
                            <a id="hlnkDash" href="@Url.Content("~")"><i class="fa fa-dashboard"></i><span>Dashboard</span></a>
                        </li>

                        <li class="treeview">
                            <a id="HyperLink9" href="@Url.Content("#")">
                                <i class="fa fa-bar-chart-o"></i>
                                Content
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <a id="HyperLink11" href="@Url.Content("~/Activities/")">
                                        <i class="fa fa-angle-double-right"></i>Activities
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-laptop"></i>
                                Content Setting
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <a id="HyperLink4" href="@Url.Content("~/Categories")">
                                        <i class="fa fa-angle-double-right"></i>Categories
                                    </a>
                                </li>

                                <li>
                                    <a id="HyperLink13" href="@Url.Content("~/Council")">
                                        <i class="fa fa-angle-double-right"></i>Council
                                    </a>
                                </li>
                                <li>
                                    <a id="HyperLink7" href="@Url.Content("~/Keyword")">
                                        <i class="fa fa-angle-double-right"></i>Keyword
                                    </a>
                                </li>
                                <li>
                                    <a id="HyperLink5" href="@Url.Content("~/Suburb")">
                                        <i class="fa fa-angle-double-right"></i>Suburb
                                    </a>
                                </li>
                                <li>
                                    <a id="HyperLink6" href="@Url.Content("~/State")">
                                        <i class="fa fa-angle-double-right"></i>State
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li>

                            <a id="HyperLink8" href="@Url.Content("~/Pages/")"><i class="fa fa-edit"></i><span>Pages</span></a>
                        </li>
                        <li>

                            <a id="HyperLink1" href="@Url.Content("~/Account/")"><i class="fa fa-folder"></i><span>User Management</span></a>
                        </li>
                        <li>
                            <a id="HyperLink12" href="@Url.Content("~/Assets/")"><i class="fa fa-laptop"></i><span>Images</span></a>

                        </li>
                        <li class="treeview">
                            <a href="#"><i class="fa fa-folder"></i>Site Setting<i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="treeview-menu">
                                <li>
                                    <a id="HyperLink2" href="@Url.Content("~/Settings/")"><i class="fa fa-angle-double-right"></i>General Setting</a>
                                </li>
                                <li>
                                    <a id="HyperLink16" href="@Url.Content("~/Settings/Navigation")"> <i class="fa fa-angle-double-right"></i>Navigation</a>
                                </li>
                                <li>
                                    <a id="HyperLink17" href="@Url.Content("~/Mail/")"> <i class="fa fa-angle-double-right"></i>Mail Template</a>
                                </li>
                                <li>
                                    <a id="HyperLink18" href="@Url.Content("~/Settings/Mailer")"> <i class="fa fa-angle-double-right"></i>SMTP Setting</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </section>
                <!-- /.sidebar -->
            </aside>

            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">

                @RenderBody()
                <!-- /.content -->
            </aside>
            <!-- /.right-side -->
        </div>
        <!-- ./wrapper -->
</body>
</html>
